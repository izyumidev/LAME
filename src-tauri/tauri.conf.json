{
  "build": {
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "LAME",
    "version": "0.0.2"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "sh.lame.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "LAME",
        "hiddenTitle": true,
        "width": 1000,
        "height": 725,
        "minWidth": 768,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "focus": false,
        "visible": true,
        "fileDropEnabled": true,
        "decorations": true,
        "transparent": true,
        "center": true,
        "titleBarStyle": "Overlay"
      }
    ]
  }
}
